"gnome-terminal"
  mod4 + shift + Return

# Logs out of gnome (and into xmonad)
"gnome-session-save --logout"
  mod4 + shift + q

# Locks the screen
"gnome-screensaver-command -l"
  mod4 + z

# Takes a screenshot and saves it in the home dir
"scrot"
  Print

# Turn volume up
"soundcontroller up"
  XF86AudioRaiseVolume

# Turn volume down
"soundcontroller down"
  XF86AudioLowerVolume

# Mute/unmute volume
"soundcontroller toggle"
  XF86AudioMute

# Silence the volume
"soundcontroller silence"
  mod4 + shift + m

# change sound card
"soundcontroller changesound"
  mod4 + s

# Lock screen and suspend computer
"sleep.sh"
  XF86Sleep

# opens the dmenu launcher
"dmenu_run -nb '#1a1a1a' -nf '#ffffff' -sb '#aecf96' -sf black -p '>'"
  mod4 + p
